<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowFragmentDetail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:background="@drawable/bg_icon"
        android:layout_marginTop="@dimen/size_16_dp"
        android:layout_marginStart="12dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editDetail"
        android:layout_width="@dimen/size_48_dp"
        android:layout_height="@dimen/size_48_dp"
        android:src="@drawable/ic_edit_24"
        android:padding="8dp"
        android:layout_marginTop="@dimen/size_16_dp"
        android:layout_marginEnd="@dimen/size_8_dp"
        android:background="@drawable/bg_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleDetailFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/Title"
        android:textSize="@dimen/text_size_32sp"
        android:layout_marginTop="@dimen/size_16_dp"
        app:layout_constraintTop_toBottomOf="@id/arrowFragmentDetail"
        app:layout_constraintStart_toStartOf="@id/arrowFragmentDetail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/Type_something"
        android:textSize="@dimen/text_size_20sp"
        android:layout_marginTop="@dimen/size_8_dp"
        app:layout_constraintTop_toBottomOf="@id/titleDetailFragment"
        app:layout_constraintStart_toStartOf="@id/titleDetailFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>