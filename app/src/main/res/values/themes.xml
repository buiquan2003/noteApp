<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NoteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="nameTitle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:text">please check again</item>
    </style>

    <style name="ButtonOk" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">26sp</item>
        <item name="android:text">Ok</item>
        <item name="android:startColor">@color/black</item>
    </style>

    <style name="ButtonClose" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">26sp</item>
        <item name="android:text">Cancel</item>
        <item name="android:startColor">@color/black</item>
    </style>

    <style name="SignUp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">32sp</item>
        <item name="android:text">SignUp</item>
        <item name="android:startColor">@color/black</item>
    </style>

    <style name="userText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:startColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="userTextOutPut" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:startColor">@color/black</item>
    </style>

    <style name="textUserItemTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_32sp</item>
        <item name="android:startColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Book Review</item>
    </style>

    <style name="textUserItemTextNote" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_28sp</item>
        <item name="android:startColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">your can block</item>
    </style>

    <style name="textUserItemTextTime" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:startColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">12:34</item>
    </style>
    <style name="textUserItemTextDate" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:startColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">12/24</item>
    </style>


    <style name="Theme.NoteApp" parent="Base.Theme.NoteApp" />
</resources>